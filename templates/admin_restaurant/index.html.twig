{% extends 'base-backend.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center">
<h1>Restaurant index</h1>
<a href="{{ path('app_admin_restaurant_new') }}"class="btn btn-success">Nouveau</a>
</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nom }}</td>
                <td>
                    <a href="{{ path('app_admin_restaurant_show', {'id': restaurant.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
