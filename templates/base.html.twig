<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# TYPOS #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Poppins:wght@100;300;400&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/22189df88f.js" crossorigin="anonymous"></script>
        {# CSS #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('css/style.min.css') }}">
        <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {# NAVBAR #}
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_front_home') }}">MCD PEP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav w-100">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_front_home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_front_date_index') }}">Consulter</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_front_date_new') }}">Nouvelle Tâche</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">Notes</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">To do list</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">Fiches PEP</a>
                    </li>
                    <li class="ms-auto nav-item d-flex align-items-center">
                    {% if app.user is not null %}
                    <a class="nav-link" href="#" title="Mon compte"><i class="fa-solid fa-user"></i></a>
                    <a class="nav-link" href="#" title="Déconnexion"><i class="fa-solid fa-right-from-bracket"></i></a>
                    {% else %}
                    <a href="#" class="nav-link">Inscription</a>
                    <a class="nav-link" href="#"><i class="fa-solid fa-right-to-bracket"></i></a>
                    {% endif %}
                    </li>
                </ul>
                </div>
            </div>
        </nav>
        {# FIN NAVBAR #}
        <main class="container-lg shadow py-4">
            {# Prise en charge des messages flash #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
        <footer class="bg-dark text-light p-3">
        &copy; 2023 - MCD Pep App 
        </footer>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script src="https:////cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 
        {# <script src="{{ asset('js/app.js') }}"></script> #}

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
