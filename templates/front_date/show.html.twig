{% extends 'base.html.twig' %}

{% block title %}Date{% endblock %}

{% block body %}
    <a href="{{ path('app_front_date_index') }}" class="btn btn-dark mb-4">Retour</a>
    <h1>Date</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Tache</th>
                <td>{{ date.tache }}</td>
            </tr>
            <tr>
                <th>Fait le</th>
                <td>{{ date.libDate ? date.libDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Par</th>
                <td>{{ date.employee }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex flex-wrap justify-content-between align-items-center">
    {{ include('front_date/_delete_form.html.twig') }}
    <a href="{{ path('app_front_date_edit', {'id': date.id}) }}" class="btn btn-success"><i class="bi bi-pencil"></i></a>
    </div>

{% endblock %}
