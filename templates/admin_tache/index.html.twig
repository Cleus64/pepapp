{% extends 'base-backend.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center">
<h1>Tache index</h1>
<a href="{{ path('app_admin_tache_new') }}"class="btn btn-success">Nouveau</a>
</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Equipement</th>
                <th>Periodicité</th>    
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.nom }}</td>
                <td>{{ tache.equipement }}</td>
                <td>{{ tache.periodicite }}</td>
                <td>
                    <a href="{{ path('app_admin_tache_show', {'id': tache.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_tache_edit', {'id': tache.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune tâche trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
